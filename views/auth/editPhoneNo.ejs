<%- include('../includes/head.ejs') %>
</head>
<link rel="stylesheet" href="/css/auth.css">

<body>
    <%- include('../includes/nevbar.ejs') %>
    <%- include('../includes/appbar.ejs') %>
    <main>
        <div class="sing-up">
            <h1 class="title">Verification</h1>
            <br>

            <form action="/verify-otp" method="post">
                <div class="phone-no">
                    <label for="phone_no"><%=phoneNo?'Edit':"Add"%> phone number</label>
                    <input type="number" id="phone_no" name="phoneNo" value="<%=phoneNo%>" maxlength="10" required>
                </div>
                <div class="OTP" style="display: none;">
                    <label for="OTP">Enter OTP</label>
                    <input type="number" id="OTP" name="OTP"  max="999999" min="100000" required>
                </div>
                <div style="display: flex;flex-direction: row;">
                    <button style="margin-top: 1rem" type="button" class="btn sing-up-submit send-otp">Send OTP</button>
                    <button style="margin: 1rem 0 0 0.5rem; display:none;" type="button" class="btn sing-up-submit verify-no">verify</button>
                </div>
                
            </form>
        </div>
    </main>
    
    <script src="/js/editPhoneno.js"></script>
    <%- include('../includes/end.ejs') %>