<div class="user-dropdown">
    <span class="material-symbols-outlined user-avtar">
        account_circle
    </span>
    <div class="user-dropdown-content">
        <% if(isAuthenticated) {%>
        <img class="circal-avatar user-thumb dropdown-itom" src="<%=user.user_thumbnail.middium%>" alt="user-image">
        <h2 class="dropdown-itom"><%=user.firstName%> <%=user.lastName%></h2>
        <%}%>
        <h5 class="dropdown-itom"><%=user.user_email.email%>
        <% if(!user.user_email.verification_status) {%>
            <a href="/verification/email">verify email</a>
        <%}%></h5>
        <hr>
        <br>
        <a href="/<%=user._id%>" class="outline-btn manage-btn">Manage Profile</a>
    </div>

</div>