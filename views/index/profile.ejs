<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/profile.css">
</head>

<body>
    <%- include('../includes/nevbar.ejs') %>
    <%- include('../includes/appbar.ejs') %>
    <main>
        <div class="profile <%=master?'':'no-master'%>">
            <h1 class="title">Profile</h1>
            <div class="profile-content">
                <div>
                    <img class="user-image circal-avatar" src="<%=profUser.user_thumbnail.large %>" alt="">
                </div>
                <div class="divider"></div>
                <div class="user-info">
                    <label class="main-heading"><%=profUser.firstName %> <%=profUser.lastName %></label>
                    <table class="user-detail">
                        <tr>
                            <td class="heding">
                                <strong>Email: </strong>
                            </td>
                            <td class="detail"> <%=profUser.user_email.email %> </td>
                            <td class="status"><a
                                    href="/verification/email"><%=profUser.user_email.verification_status?'Edit':'Verify'%></a>
                            </td>
                        </tr>
                        <%if(master||profUser.user_phone_no.number!=null){%>

                        <tr>
                            <td class="heding">
                                <strong>Phon No: </strong>
                            </td>
                            <td class="detail"> <%=profUser.user_phone_no.number %> </td>

                            <td class="status"><a
                                    href="/edit-phone-no"><%=profUser.user_phone_no.number==null?'Add':'Edit'%></a>
                            </td>
                        </tr>
                        <%}%>
                        <%if(master||profUser.user_address!='{}'){%>

                        <tr>
                            <td class="heding">
                                <strong>Address: </strong>
                            </td>
                            <td class="detail">
                                <%if(profUser.user_address!='{}'){%>
                                <%=profUser.user_address.apprtmentSuite%>,<%=profUser.user_address.stritAddress%>,
                                <%=profUser.user_address.city%>, <%=profUser.user_address.state%>,
                                <%=profUser.user_address.contry%> </td>
                                <%}%>

                            <td class="status"><a
                                    href="/address"><%=profUser.user_address=='{}'?'Add':'Edit'%></a>
                            </td>
                        </tr>
                        <%}%>


                    </table>
                </div>
            </div>


        </div>

    </main>
    <%- include('../includes/end.ejs') %>